#========================= Prompts ============================
#Dmenu to choose which display to use
bindsym $mod+F4 exec choosedisplay

# Shutdown & Cia
bindsym $mod+BackSpace exec prompt "Shutdown?" "sudo shutdown -h now"
bindsym $mod+Shift+BackSpace exec sysact
bindsym $mod+Control+BackSpace exec prompt "Restart?" "sudo shutdown -r now"
bindsym $mod+Shift+Control+BackSpace exec prompt "Log out?" "i3-msg exit"
# Lock Screen
bindsym $mod+Mod1+BackSpace exec ~/configs/i3/scripts/i3lock-blur
#bindsym $mod+Mod1+l exec i3lock -i ~/Pictures/lockScreen
#bindsym $mod+Mod1+l exec i3lock --color "#303030"


# Misc
for_window [class="Yad"] floating enable

# Keyring Login
exec /usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh









# start main stack
bindsym $mod+Shift+s   layout splitv;\
                       move left;\
                       resize grow right 20 px or 20 ppt;\
                       split v;\
                       layout stacking


exec --no-startup-id  $HOME/.config/i3/i3-master-stack/i3_master
 # swap to master node
 bindsym $mod+n nop swap master 
 # go to master node
 bindsym $mod+Shift+n nop go master 
 # enable/disable master layout in current workspace
 bindsym $mod+Mod1+n nop master toggle 
